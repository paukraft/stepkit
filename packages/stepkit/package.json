{
  "name": "stepkit",
  "version": "0.1.0",
  "description": "Type-safe pipeline builder for Node.js/TypeScript with powerful step composition",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paukraft/stepkit.git"
  },
  "bugs": {
    "url": "https://github.com/paukraft/stepkit/issues"
  },
  "homepage": "https://github.com/paukraft/stepkit#readme",
  "author": "Pau Kraft",
  "keywords": [
    "pipeline",
    "workflow",
    "builder",
    "typescript",
    "steps"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "pnpm -s build"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.9",
    "typescript": "5.9.2"
  }
}

